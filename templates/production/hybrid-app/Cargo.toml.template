[package]
name = "{{APP_NAME}}"
version = "0.1.0"
edition = "2021"
description = "{{APP_DESCRIPTION}}"

[dependencies]
thenodes = { path = "../../" }
clap = { version = "4", features = ["derive"] }
tokio = { version = "1", features = ["full"] }
serde = { version = "1", features = ["derive"] }
serde_json = "1"
toml = "0.8"
anyhow = "1"

[[bin]]
name = "{{APP_NAME}}"
path = "src/main.rs"
